<section class="login flex justify-center pt-12">
  <div class="w-full max-w-xl">

      <form action="/orders" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" id="payment-form">
        <% if(messages.error1) { %>
          <span class="text-red-500 text-sm"><%= messages.error1 %></span>
        <% } %>
        <% if(messages.success1) { %>
          <p style="color: #59b256;"><%= messages.success1 %></p>
        <% } %>
        <div class="relative ml-auto mb-4">
          <select id="paymentType" name="paymentType" class="block appearance-none bg-white w-full border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded leading-tight focus:outline-none focus:shadow-outline">
            <option value="cod">Cash on delivery</option>
            <option value="card">Pay with card</option>
          </select>
          <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
            <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
          </div>
      </div>
      <input name="order_id" value="<%= messages.order_id && messages.order_id %>" type="text" class="border border-gray-400 p-2 mb-4 w-full" placeholder="Order Id">
      <input name="phone" value="<%= messages.phone && messages.phone %>" type="text" class="border border-gray-400 p-2 mb-4 w-full" placeholder="Phone number">
      <input name="address" type="text" class="border border-gray-400 p-2 mb-4 w-full" placeholder="Address">
      <input name="otp" type="text" class="border border-gray-400 p-2 w-full" placeholder="otp">
      <div class="mt-4">
          <div class="w-full" id="card-element"></div>
          <button type="submit" class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Order Now</button>
      </div>
      </form>


      <p class="text-center text-gray-500 text-xs">
        &copy;2021 Sarthak Shukla. All rights reserved.
      </p>
    </div>
</section>