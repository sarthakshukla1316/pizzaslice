<section class="orders light-section">
    <div class="container mx-auto pt-12">
        <h1 class="font-bold text-lg mb-4">Successful Orders</h1>

        <table class="w-full table-auto bg-white">
            <thead>
                <tr>
                    <th class="px-4 py-2 text-left">Orders</th>
                    <th class="px-4 py-2 text-left">Name</th>
                    <th class="px-4 py-2 text-left">Phone</th>
                    <th class="px-4 py-2 text-left">Address</th>
                    <th class="px-4 py-2 text-left">Time</th>
                </tr>
            </thead>

            <tbody>
                <% if(orders.length) { %>
                    <% orders.forEach(order => { %>
                        <tr>
                            <td class="border px-4 py-2">
                                <a href="/customer/orders/<%=order._id%>" class="text-green-600"><%= order._id %></a>
                            </td>

                            <td class="border px-4 py-2">
                                <%= order.customerId.name %>
                            </td>

                            <td class="border px-4 py-2">
                                <%= order.phone %>
                            </td>

                            <td class="border px-4 py-2">
                                <%= order.address %>
                            </td>

                            <td class="border px-4 py-2">
                                <%= moment(order.updatedAt).format('hh:mm A') %>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td class="p-4"><span>No orders found!</span></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</section>