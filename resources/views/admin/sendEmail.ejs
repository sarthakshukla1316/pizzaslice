<section class="login flex justify-center pt-4">
    <div class="w-full max-w-lg">
        <h1 class="text-xl font-bold mt-4 text-center mb-4" id="foodHere">Send Response <span style="color: rgb(73, 206, 80);">&#128522;</span><span style="color: rgb(73, 206, 80);">&#128523;</span></h1>
        <form action="/admin/send-email" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
          <% if(messages.error) { %>
            <span class="text-red-500 text-sm"><%= messages.error %></span>
          <% } %>
          <% if(messages.success) { %>
            <p style="color: #59b256;"><%= messages.success %></p>
          <% } %>

          <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
              Email
            </label>
            <input
              name="email" 
              class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="email" value='<%= email %>' type="text" placeholder="Enter your email">
          </div>

          <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="comment">
                Response message
            </label>
            <textarea
              name="comment" value='<%= messages.comment && messages.comment %>' placeholder="Enter your comments"></textarea>
          </div>
          <div class="flex items-center justify-between">
            <button 
              class="btn-primary rounded text-white font-bold py-2 px-4 focus:outline-none focus:shadow-outline" 
              type="submit"
            >
              Send
            </button>
            <button 
              class="btn-primary rounded text-white font-bold py-2 px-4 focus:outline-none focus:shadow-outline" 
              href="/admin/users"
              style="background: rgb(224, 98, 98);"
            >
              cancel
            </button>
            
          </div>
          
        </form>
        <p class="text-center text-gray-500 text-md" style="margin-bottom: 20px;">
          &copy;2021 <a href="https://sarthakshukla.netlify.app" target="_blank">Sarthak Shukla</a>. All rights reserved.
        </p>
      </div>
</section>
