<section class="login flex justify-center pt-24">
    <div class="w-full max-w-xs">
        <form action="/sendOtp" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
          <% if(messages.error) { %>
            <span class="text-red-500 text-sm"><%= messages.error %></span>
          <% } %>
          <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
              Email
            </label>
            <input
              name="email" 
              class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" type="email" placeholder="Enter your email">
          </div>
          <div class="flex items-center justify-between">
            <button 
              class="btn-primary rounded text-white font-bold py-2 px-4 focus:outline-none focus:shadow-outline" 
              type="submit"
            >
              Send OTP
            </button>
            <a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href="/register">
              Don't have account?
            </a>
            
          </div>
          
        </form>

        <h1 style="text-align: center; font-size: 22px;padding: 5px;">Or</h1>

        <form action="/sendOtpPhone" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
          <% if(messages.error1) { %>
            <span class="text-red-500 text-sm"><%= messages.error1 %></span>
          <% } %>
          <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
              Phone number
            </label>
            <input
              name="phone" 
              class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="phone" type="text" placeholder="Enter your phone number">
          </div>
          <div class="flex items-center justify-between">
            <button 
              class="btn-primary rounded text-white font-bold py-2 px-4 focus:outline-none focus:shadow-outline" 
              type="submit"
            >
              Send OTP
            </button>
            <a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href="/login">
              Already have account?
            </a>
            
          </div>
          
        </form>


        <p class="text-center text-gray-500 text-xs">
          &copy;2021 Sarthak Shukla. All rights reserved.
        </p>
      </div>
</section>


